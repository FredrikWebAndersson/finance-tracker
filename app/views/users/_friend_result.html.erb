<div class="results-block col-6 pl-0">
  <%= render "layouts/messages" %>
</div>

<% if @friends %>
  <% @friends.each do |friend| %>
    <div class="card card-header col-8 results-block mb-2">
      <strong>Name: </strong><%= friend.full_name %>
      <strong>Email: </strong><%= friend.email %>
      <%= link_to "View Profile", "#", class: "btn btn-sm btn-success submit-button float-right" %>
      <% if current_user.not_friends_with?(friend.id) %>
        <%= link_to "follow", friendships_path(friend: friend), class: "btn btn-sm btn-success submit-button float-right", method: :post  %>
      <% else %>
        <span class="following-span badge badge-success float-right mr-3">Following</span>
      <% end %>
    </div>
  <% end %>
<% end %>