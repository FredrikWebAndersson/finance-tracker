<div class="results-block col-6 pl-0">
  <%= render "layouts/messages" %>
</div>

<% if @stock %>
  <div class="card card-header col-6 results-block">
    <strong>Symbol: </strong><%= @stock.ticker.upcase %>
    <strong>Name: </strong><%= @stock.name %>
    <strong>Price: </strong><%= @stock.last_price %>
    <%= link_to "Add to portfolio", user_stocks_path(user: current_user, ticker: @stock.ticker), class: "btn btn-success submit-button", method: :post  %>
  </div>
<% end %>

