
<h1>My Portfolio</h1>

<%= render 'stocks/search' %>

<div id="results"></div>


<% if !@tracked_stocks.empty? %>
  <h3 class="mt-5">Your tracked stocks</h3>
  <%= render 'stocks/list' %>
<% else %>
  <h3 class="mt-5">You are not tracking any stocks</h3>
  <p>Search a stock to build up your portfolio.</p>
<% end %>